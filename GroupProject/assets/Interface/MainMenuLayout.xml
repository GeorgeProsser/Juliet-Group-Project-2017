<?xml version="1.0" encoding="UTF-8"?>

<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="start" controller="julietgroupproject.GUI.MainMenuController">
        <layer id="foreground" childLayout="center">
            <panel id="panel_background" width = "100%" height="100%" childLayout="vertical">
                
                <panel id="panel_middle" width="*" height="100%" childLayout="horizontal">
                    <panel id = "panel_middle_left" backgroundColor="#33333333" width= "10%" height = "*" childLayout = "vertical">
                        <panel id = "panel_top" backgroundColour = "#33333333" height = "7%" />
                        <panel id = "panel_gravity_options" width= "*" height = "20%" childLayout = "vertical" valign = "center">
                            <control name="label" text="Gravity Options:" height = "18%" align = "center" />
                            <control name="button" label="Gravity Off"  width = "*" id="GravButton" align="center" valign="center" 
                                visibleToMouse="true" > 
                                <interact onClick="toggleGravOff()"/>
                        </control>
                        <control name="button" label="Gravity On" width = "*" id="GravButton" align="center" valign="center" 
                                visibleToMouse="true" > 
                                <interact onClick="toggleGravOn()"/>
                        </control>
                        
                        </panel>
                        
                        <panel id ="panel_new_limb_size_entry" backgroundColour="#33333333" width = "*" height = "70%" childLayout = "vertical">
                            <control name="label"text="New Limb Generator:" height = "10%" valign = "top"/>
                            
                            <panel id = "panel_new_limb_entry_fields" backgroundColour="#bb345123" width = "*" height = "30%" childLayout = "vertical" valign ="center">
                                <control name="label" text="Enter Width (X-axis):" />
                                <control name="textfield" id="widthTextField" maxLength="20"  />
                                <control name="label" text="Enter Height (Y-axis):" />
                                <control name="textfield" id="heightTextField" maxLength="20" />
                                <control name="label" text="Enter Length (Z-axis):" />
                                <control name="textfield" id="lengthTextField" maxLength="20" />
                            </panel>
                            <panel id = "panel_new_limb_entry_fields_second" backgroundColour="#bb345123" width = "*" height = "25%" childLayout = "vertical" valign ="center">
                                <control name = "button" label = "Set Focus to Simulator" align = "center" width = "*"/>
                                <control name="label" text="*** Right click on body to add ***" height = "10%"/>
                            </panel>
                            <panel id = "panel_shape_selector" backgroundColour="#33333333" width = "*" height = "25%" childLayout = "vertical" valign ="center">
                               <control name="label" text="Shape Selector:" height = "20%" />
                                <control name ="button" label="Set Shape to Cuboid" width = "*" id = "cuboidButton" visibleToMouse="true">
                                    <interact onClick="setToCuboid()"/>
                                </control>
                                <control name ="button" label="Set Shape to Sphere" width = "*" id = "sphereButton" visibleToMouse="true">
                                    <interact onClick="setToSphere()"/>
                                </control>
                                <control name="label" width = "*" id = "currentShape"text="Currently Selected: Cuboid" />
                            </panel>
                            
                        </panel>
                        
                    </panel>
                    <panel id = "panel_middle_center" width= "80%" height = "*" childLayout = "vertical">
                    </panel>
                    <panel id = "panel_middle_right" backgroundColor="#33333333"  width= "10%" height = "*" childLayout = "vertical">
                        <panel id = "panel_top" backgroundColour = "#33333333" height = "7%" />
                        <panel id ="panel_new_body_size_entry" backgroundColour="#33333300" width = "*" height = "50%" childLayout = "vertical">
                            <control name="label"text="New Body Generator:" height = "10%" valign = "top"/>
                            
                            <panel id = "panel_new_body_entry_fields" backgroundColour="#33333333" width = "*" height = "35%" childLayout = "vertical" valign ="center">
                                <control name="label" text="Enter Width (X-axis):" />
                                <control name="textfield" id="bodyWidthTextField" maxLength="20"  />
                                <control name="label" text="Enter Height (Y-axis):" />
                                <control name="textfield" id="bodyHeightTextField" maxLength="20" />
                                
                                <control name="label" text="Enter Length (Z-axis):" />
                                <control name="textfield" id="bodyLengthTextField" maxLength="20" />
                            </panel>
                            
                            <control name = "button" label = "Build new body" align = "center" width = "*">
                            
                                <interact onClick="newBody()"/>
                            </control>
                            
                        </panel>
                        <panel id="panel_editor_options"  width="*" height="20%" childLayout="vertical">
                            <control name="label" text="Editor Options:" height = "18%" align = "center" />
                             <control name="button" width = "*" label="Hide Editor" id="hideGUI" align="center" valign="center" 
                                visibleToMouse="true" > 
                                    <interact onClick="hideEditor()"/>
                             </control>
                             <control name="button" label="Toggle Wire Mesh" width = "*"  id="wireMesh" align="center" valign="center" 
                                visibleToMouse="true" > 
                                    <interact onClick="toggleWireMesh()"/>
                             </control>
                             <control name="button" label="Reset Alien" width = "*" id="alienReset" align="center" valign="center" 
                                visibleToMouse="true" > 
                                    <interact onClick="resetAlien()"/>
                             </control>
                             <control name="button" label="Smooth Camera Toggle" width = "*" id="smoothCamera" align="center" valign="center" 
                                visibleToMouse="true" > 
                                <interact onClick="toggleSmoothness()"/>
                              </control>
                         </panel>
                        <control name="label" text="Random Limb Generator:" height = "5%"/>
                        <control name="button" label="Add Limb" id="add_limb_button"  width = "*" align="center" valign="bottom" 
                                visibleToMouse="true" > 
                                <interact onClick="addLimb()"/>
                        </control>
                    </panel>
                </panel>
                
            </panel>
        </layer>
    </screen>
        <screen id="hidden" controller="julietgroupproject.GUI.MainMenuController" childLayout="right">
            <layer id="hidden_layer" childLayout="center" width = "100%" >
                <panel id = "hidden_center" width= "100%" valign = "bottom" childLayout = "vertical">
                    <control name = "button" label = "Show Editor" id = "show_editor" align = "right" width = "5%"
                            visibleToMouse = "true" >
                            <interact onClick="showEditor()"/>
                    </control>
                </panel>
            
            </layer>
        </screen>
    
</nifty>