<?xml version="1.0" encoding="UTF-8"?>

<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
     <screen id="begin" controller="julietgroupproject.GUI.MainMenuController">
         <layer id="foreground" backgroundColor = "#33333333" childLayout="center">
            
                <panel id="button_panel"  height = "7%" width = "30%" childLayout="horizontal">
                     <control name="button" label="New Alien"  height = "*" width = "*" id="newAlienButton" align="center" valign="center" 
                                    visibleToMouse="true" > 
                         <effect>
                             <onActive name="fade" start ="#00" end = "ff" length = "2000"/>
                            <!-- <onClick name = "fade" start = "#ff" end = "#00" length = "2000"/>-->
                        </effect>
                        <interact onClick="showEditor()"/>
                     </control>
                     <control name="button" label="Load Saved Alien"  height = "*" width = "*" id="loadAlienButton" align="center" valign="center" 
                                    visibleToMouse="true" > 
                          <effect>
                             <onActive name="fade" start ="#00" end = "ff" length = "2000"/>
                        </effect>
                           <interact onClick="loadAlienButtonClick()"/>
                     </control>
                </panel>
           
        </layer>
    </screen>
    <screen id="editor_options" controller="julietgroupproject.GUI.MainMenuController">
         <layer id="foreground" backgroundColor = "#33333333" childLayout="center">
            
                <panel id="options_panel" childLayout="horizontal">
                    <effect>
                             <onActive name="fade" start ="#00" end = "ff" length = "1500"/>
                            <!-- <onClick name = "fade" start = "#ff" end = "#00" length = "2000"/>-->
                    </effect>
                     <control id="editor_options_window" name="window" closeable= "false" height = "300px" title="Editor Options" width="400px" y = "300px" x="400px" >
                         <panel id = "actual_options_panel" childLayout = "vertical" height = "95%" width = "100%">
                              <control name="button" label="Toggle Wire Mesh" width = "*"  id="wireMesh" align="center" valign="center" 
                                            visibleToMouse="true" > 
                                    <interact onClick="toggleWireMesh()"/>
                              </control>
                              <control name="button" label="Smooth Camera Toggle" width = "*" id="smoothCamera" align="center" valign="center" 
                                            visibleToMouse="true" > 
                                    <interact onClick="toggleSmoothness()"/>
                              </control>
                              <control name="button" label="Gravity Off"  width = "*" id="GravButton" align="center" valign="center" 
                                            visibleToMouse="true" > 
                                    <interact onClick="toggleGravOff()"/>
                              </control>
                              <control name="button" label="Gravity On" width = "*" id="GravButton" align="center" valign="center" 
                                            visibleToMouse="true" > 
                                    <interact onClick="toggleGravOn()"/>
                              </control>
                         </panel>
                         <panel id = "return_options_panel" childLayout = "vertical" valign = "bottom" height = "8%" width = "100%">
                             <control name ="button" label="Go Back to Editor" height = "*" width = "*" id = "returnToEditor" visibleToMouse="true">
                                <interact onClick="showEditor()"/>
                             </control>
                             
                         </panel>    
                        
                        
                    </control>
                    
                </panel>
           
        </layer>
    </screen>
    
    <screen id="start" controller="julietgroupproject.GUI.MainMenuController">
        <layer id="foreground" childLayout="center">
            
            <panel id="panel_background" width = "100%" height="100%" childLayout="vertical">
                <effect >
                             <onActive name="fade" start ="#00" end = "ff" length = "1500" post = "true" />
                             <!--<onEndScreen name="fade" start ="#ff" end = "00" length = "1500" />-->
                            <!-- <onCustom name = "fade" start = "#ff" end = "#00"  length = "1500"/>-->
                            <!-- <onClick name = "fade" start = "#ff" end = "#00" length = "2000"/>-->
                </effect>
                
                <panel id="panel_middle" width="*" height="100%"  childLayout="horizontal">
                    <panel id = "panel_middle_left"  width= "15%" height = "*" childLayout = "vertical">
                        <control id="limb_body_tabs" name="tabGroup" buttonWidth="50%" buttonHeight="50px">
                            <control id="add_body_tab" name="tab" caption="Body">
                                <!--content of tab_1-->
                                <panel id = "add_body_panel"  width= "100%" height = "100%" childLayout = "vertical">
                                    <panel id = "spare_space_top" backgroundColour = "#33333333" height = "7%" />
                                    <panel id ="panel_new_body_size_entry" backgroundColour="#33333300" width = "*" height = "50%" childLayout = "vertical">
                                        <control name="label"text="Body Properties:" height = "10%" valign = "top"/>

                                        <panel id = "panel_new_body_entry_fields" backgroundColour="#33333333" width = "*" height = "90%" childLayout = "vertical" valign ="center">
                                            <control name="label" text="Shape Selector:" height = "9%"/>
                                            <control id="shape_selector_body" name="dropDown" />
                                            
                                            <control name="label" id = "first_body_label" height = "9%" width = "100%" text="Width:" />
                                            
                                            <control id="bodyWidthSlider" name="horizontalSlider" initial = "2.1" width="100%" min = "1" max = "10.0" stepSize = "0.1"/>
                                            
                                            
                                            
                                            <control name="label" id = "third_body_label"text="Length:" height = "9%" width = "100%" />
                                            <control id="bodyLengthSlider" name="horizontalSlider" initial = "1.6"  width="100%" min = "1" max = "10.0" stepSize = "0.1"/>
                                            <control name="label" id = "second_body_label" width = "100%"  height = "9%" text="Height:" />
                                            <control id="bodyHeightSlider" name="horizontalSlider" initial = "0.7"width="100%" min = "1" max = "10.0" stepSize = "0.1"/>
                                            <control name="label" height = "9%" text="Weight:" />
                                            <control id="bodyWeightSlider" name="horizontalSlider" initial = "2.2"  width="100%" min = "1.5" max = "15.0" stepSize = "0.1"/>
                                            
                                            
                                               
                                            
                                            <panel id= "space" height = "10%" />
                                            <control id = "newBodyButton" name = "button" label = "Build New Body" valign = "bottom" align = "center" width = "*">

                                                <interact onClick="newBody()"/>
                                            </control>
                                            
                                            
                                        </panel>

                                        

                                    </panel>
                                    <panel id="panel_editor_options"  width="*" height="20%" childLayout="vertical">
                                        
                                        
                                        
                                     </panel>
                                    <!--<control name="label" text="Random Limb Generator:" height = "5%"/>
                                    <control name="button" label="Add Limb" id="add_limb_button"  width = "*" align="center" valign="bottom" 
                                            visibleToMouse="true" > 
                                            <interact onClick="addLimb()"/>
                                            <effect >
                                                
                                                <onCustom customKey = "fadeOut" name = "fade" start = "#ff" end = "#00"  length = "1500" neverStopRendering = "true"/>
                                                <onCustom customKey = "fadeIn" name = "fade" start = "#00" end = "#ff"  length = "1500" neverStopRendering = "true"/>
                            
                                            </effect>
                                    </control>-->
                                </panel>
                            </control>
                            <control id="add_limb_tab" name="tab" caption="Limb">
                                <panel id = "add_limb_panel" width = "100%" height = "100%" childLayout = "vertical">
                                    <panel id = "panel_top" backgroundColour = "#33333333" height = "6%" />
                                        
                                        


                                    <panel id ="panel_new_limb_size_entry" backgroundColour="#33333333" width = "*" height = "70%" childLayout = "vertical">
                                        <control name="label"text="Limb Properties:" height = "10%" valign = "top"/>
                                        
                                            <control id="limb_prop_tabs" name="tabGroup"  buttonHeight="50px">
                                                
                                                <control id="new_limb_tab" name="tab"  caption="New">
                                                    
                                                    <control id="newLimbScrollbar"  name="scrollPanel" style="autoscroll"  horizontal="false" height="100%">
  

                                                        <panel id="myScrollStuff" backgroundColor = "#88888800" width="100%" height = "100%" childLayout="vertical" >
                                                            <control name="label" height = "7%"text="Shape Selector:" />
                                                            <control id="shape_selector" name="dropDown" />
                                                            <panel id = "rect_options"  childLayout = "vertical" >
                                                                
                                                                <control name="label" id = "first_label" height = "7%" text="Select  Width:" />
                                                                <control id="limbWidthSlider" name="horizontalSlider" initial = "1.3" width="100%" min = "0.3" max = "10.0" stepSize = "0.1"/>
                                                                
                                                                <control name="label" id = "third_label" height = "7%"text="Select  Length:" />
                                                                <control id="limbLengthSlider" name="horizontalSlider" initial = "0.4" width="100%" min = "0.3" max = "10.0" stepSize = "0.1"/>
                                                                
                                                                <control name="label" id = "second_label" height = "7%"text="Select  Height:" />
                                                                <control id="limbHeightSlider" name="horizontalSlider" initial = "0.4" width="100%" min = "0.3" max = "10.0" stepSize = "0.1"/>     
                                                                               
                                                                <control name="label" id = "forth_label" height = "7%"text="Weight:"  />
                                                                <control id="limbWeightSlider" name="horizontalSlider" initial = "1"  width="100%" min = "0.2" max = "3" stepSize = "0.1"/>
                                                                
                                                                <control name="label" id = "fifth_label" height = "7%"text="Friction:"  />
                                                                <control id="limbFrictionSlider" name="horizontalSlider" initial = "1"  width="100%" min = "0.2" max = "3" stepSize = "0.1"/>
                                                                
                                                                <control name="label" id = "sixth_label" height = "7%"text="Strength:"  />
                                                                <control id="limbStrengthSlider" name="horizontalSlider" initial = "1"  width="100%" min = "0.2" max = "3" stepSize = "0.1"/>
                                                                
                                                                <control name="label" id = "seventh_label" height = "7%"text="Limb Seperation:"  />
                                                                <control id="limbSeperationSlider" name="horizontalSlider" initial = "1"  width="100%" min = "0.2" max = "3" stepSize = "0.1"/>
                                                                
                                                                <panel id = "symmetricPanel" height = "10%" childLayout = "horizontal" >
                                                                    <control name="label" valign = "center" id = "symmetric_label" width = "70%" text="Symmetric:"  />
                                                                    <control id="symmetricCheckBox" valign = "center" name="checkbox" />
                                                                </panel>
                                                                    
                                                                <control name ="button" label="Save Limb" height = "5%" align = "center" width = "80%" id = "save_limb_button" visibleToMouse="true">
                                                                    <interact onClick="saveLimb()"/>
                                                                </control>
                                                            </panel>
                                                            
                                                            
                                                                
                                                           
            
                                                        </panel>

                                                     </control>
                                                </control>
                                                
                                                
                                            <control id="saved_limb_tab" name="tab" caption="Saved">
                                                   <control id="savedLimbScrollbar" style="autoscroll"  name="scrollPanel" horizontal="false" height="100%"> 
                                                    
                                                    
                                                    
                                                    
                                                   </control>
                                            </control>
                                        </control>
                                    </panel>
                                    <panel id = "space_taker" height = "5%"/>
                                    <control name ="button" label="Attach Limb" height = "5%" align = "center" width = "80%" id = "attach_limb_button" visibleToMouse="true">
                                        <interact onClick="attachLimb()"/>
                                    </control>
                                </panel>
                            </control>
                        </control>
                        
                    </panel> <!-- End of left panel-->
                    <panel id = "panel_middle_right" width= "85%" height = "100%" childLayout = "horizontal" valign = "bottom">
                        
                        <panel id = "panel_middle_right_bottom" width = "100%" valign = "bottom" height = "5%" backgroundColor = "#33333333" childLayout = "horizontal">
                            <control name ="button" label="Editor Options" height = "*" width = "*" id = "editor_options" visibleToMouse="true">
                                <interact onClick="editorOptions()"/>
                            </control>
                            <control name ="button" label="New Alien" height = "*" width = "*" id = "new_alien" visibleToMouse="true">
                                <interact onClick="resetAlien()"/>
                            </control>
                            <control name ="button" label="Save Alien" height = "*" width = "*" id = "save_alien" visibleToMouse="true">
                                <interact onClick="saveAlien()"/>
                            </control>
                            <control name ="button" label="Load Alien" height = "*" width = "*" id = "load_alien" visibleToMouse="true">
                                <interact onClick="loadAlien()"/>
                            </control>
                            <control name ="button" label="Run New Simulation" height = "*" width = "*" id = "new_sim" visibleToMouse="true">
                                <interact onClick="runNewSimulation()"/>
                            </control>
                            <control name ="button" label="Load Previous Simualtion" height = "*" width = "*" id = "prev_sim" visibleToMouse="true">
                                <interact onClick="setCurrentShape()"/>
                            </control>
                            <control name ="button" label="Hide Editor" height = "*" width = "*" id = "hide_editor" visibleToMouse="true">
                                <interact onClick="hideEditor()"/>
                            </control>
                        </panel>
                    </panel>
                    
                </panel> <!--End of middle section-->
                
            </panel> <!-- End of whole screen panel-->
        </layer>
    </screen>
        <screen id="hidden" controller="julietgroupproject.GUI.MainMenuController" childLayout="right">
            <layer id="hidden_layer" childLayout="center" width = "100%" >
                <panel id = "hidden_center" width= "100%" valign = "bottom" height = "5%" childLayout = "vertical">
                    <control name = "button" label = "Show Editor" id = "show_editor" height = "100%" align = "right"  width = "13%"
                            visibleToMouse = "true" >
                            <interact onClick="showEditor()"/>
                    </control>
                </panel>
            
            </layer>
        </screen>
     <screen id="loadAlien" controller="julietgroupproject.GUI.MainMenuController">
         <layer id="foreground" childLayout="center">
            
                <panel id="load_panel"  height = "7%" width = "30%" childLayout="horizontal">
                     <control name="label" text="Choose your alien"  height = "*" width = "*" align="center" valign="center" 
                                   /> 
                       
                     <control name = "button" label = "Select" id = "show_editor" align = "right" width = "50%"
                            visibleToMouse = "true" >
                            <interact onClick="showEditor()"/>
                    </control>    
                    
                </panel>
           
        </layer>
    </screen>
    
</nifty>