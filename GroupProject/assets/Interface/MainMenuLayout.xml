<?xml version="1.0" encoding="UTF-8"?>

<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
     <screen id="begin" controller="julietgroupproject.GUI.MainMenuController">
         <layer id="foreground" backgroundColor = "#33333333" childLayout="center">
            
                <panel id="button_panel"  height = "7%" width = "30%" childLayout="horizontal">
                     <control name="button" label="New Alien"  height = "*" width = "*" id="newAlienButton" align="center" valign="center" 
                                    visibleToMouse="true" > 
                         <effect>
                             <onActive name="fade" start ="#00" end = "ff" length = "2000"/>
                            <!-- <onClick name = "fade" start = "#ff" end = "#00" length = "2000"/>-->
                             <onActive name="changeFont" font = "Interface/Fonts/Begin.fnt"/>
                        </effect>
                        <interact onClick="showEditor()"/>
                     </control>
                     <control name="button" label="Load Saved Alien"  height = "*" width = "*" id="loadAlienButton" align="center" valign="center" 
                                    visibleToMouse="true" > 
                          <effect>
                             <onActive name="fade" start ="#00" end = "ff" length = "2000"/>
                             <onActive name="changeFont" font = "Interface/Fonts/Begin.fnt"/>
                        </effect>
                           <interact onClick="gotoLoadScreen()"/>
                     </control>
                </panel>
           
        </layer>
    </screen>
    <screen id="editor_options" controller="julietgroupproject.GUI.MainMenuController">
         <layer id="foreground" backgroundColor = "#33333333" childLayout="center">
            
                <panel id="options_panel" childLayout="horizontal">
                    <effect>
                             <onActive name="fade" start ="#00" end = "ff" length = "1500"/>
                            <!-- <onClick name = "fade" start = "#ff" end = "#00" length = "2000"/>-->
                    </effect>
                     <control id="editor_options_window" name="window" closeable= "false" height = "300px" title="Editor Options" width="400px" y = "300px" x="400px" >
                         <panel height = "100%" width = "100%" childLayout = "vertical" >
                            <panel id = "actual_options_panel" childLayout = "vertical" height = "92%" width = "100%">


                                 <panel id = "chaseCamPanel" height = "15%" childLayout = "horizontal" >
                                    <control name="label" valign = "center" id = "chaseCam_label" width = "50%" text="Smooth Camera: (S)"  />
                                    <panel id = "chaseCamCheckPanel" valign = "center" width = "50%" childLayout = "vertical" >
                                       <control id="chaseCamCheckBox" checked="false" align = "center"  name="checkbox" />
                                    </panel>
                                 </panel>
                                 <panel id = "wireMeshPanel" height = "15%" childLayout = "horizontal" >
                                    <control name="label" valign = "center" id = "wireMesh_label" width = "50%" text="Wire Mesh:(Q)"  />
                                    <panel id = "chaseCamCheckPanel" valign = "center" width = "50%" childLayout = "vertical" >
                                       <control id="wireMeshCheckBox" align = "center" valign = "center" name="checkbox" />
                                    </panel>
                                 </panel>
                                 <panel id = "gravityPanel" height = "15%" childLayout = "horizontal" >
                                    <control name="label" valign = "center" id = "gravtity_label" width = "50%" text="Gravity:"  />
                                    <control id="gravitySlider" valign = "center"name="horizontalSlider" initial = "0.0"  min = "-10.0" max = "10.0" stepSize = "0.1" buttonStepSize = "0.5"/>
                                 </panel>
                                 <panel id = "texturePanel" height = "15%" childLayout = "horizontal" >
                                    <control name="label" valign = "center" id = "texture_label" width = "50%" text="Texture:"  />
                                    <control id="textureDropDown" name="dropDown" />
                                 </panel>
                                 



                            </panel>
                            <panel id = "return_options_panel" childLayout = "vertical"  height = "8%" width = "100%">
                                <control name ="button" label="Go Back to Editor"  width = "*" id = "returnToEditor" visibleToMouse="true">
                                   <interact onClick="showEditor()"/>
                                </control>
                                <!--<panel height = "10%" valign = "bottom" backgroundColor = "#333333FF"  childLayout = "vertical"/>-->
                            </panel>    
                         </panel>
                        
                    </control>
                    
                </panel>
           
        </layer>
    </screen>
    
    <screen id="save_dialog" controller="julietgroupproject.GUI.MainMenuController">
         <layer id="foreground" backgroundColor = "#33333333" childLayout="center">
            
                <panel id="save_panel" childLayout="horizontal">
                    <effect>
                             <onActive name="fade" start ="#00" end = "ff" length = "1500"/>
                    </effect>
                     <control id="save_window" name="window" closeable= "false" height = "165px" title="Save Alien" width="400px" y = "300px" x="400px" >
                         <panel height = "100%" width = "100%" childLayout = "vertical" >
                             <panel id = "save_input_panel" height = "35%" childLayout = "horizontal" >
                                 <control name="label" valign = "center" id = "save_label" width = "35%" text="File name:"  />
                                 <control valign = "center" width = "65%" id="saveTextField" name="textfield" />
                             </panel>
                             <panel id = "save_input_panel_info" height = "25%" childLayout = "horizontal" >
                                 <control name="label" valign = "center" id = "save_info_label" width = "100%" text="Alphanumeric characters, dashes, spaces and underscores only."  />
                             </panel>
                             <panel id = "return_save_panel" childLayout = "vertical"  height = "40%" width = "100%">
                                 <control name ="button" label="Save alien"  width = "*" id = "confirmSave" visibleToMouse="true">
                                     <interact onClick="confirmSave()"/>
                                 </control>
                                 <control name ="button" label="Cancel"  width = "*" id = "returnToEditor" visibleToMouse="true">
                                     <interact onClick="showEditor()"/>
                                 </control>
                             </panel>    
                         </panel>
                        
                    </control>
                    
                </panel>
        </layer>
    </screen>

    <screen id="load_dialog" controller="julietgroupproject.GUI.MainMenuController">
         <layer id="foreground" backgroundColor = "#33333333" childLayout="center">
            
                <panel id="load_panel" childLayout="horizontal">
                    <effect>
                             <onActive name="fade" start ="#00" end = "ff" length = "1500"/>
                    </effect>
                     <control id="load_window" name="window" closeable= "false" height = "165px" title="Load Alien" width="400px" y = "300px" x="400px" >
                         <panel height = "100%" width = "100%" childLayout = "vertical" >
                            <panel id = "load_input_panel" height = "35%" childLayout = "horizontal" >
                               <control name="label" valign = "center" id = "load_label" width = "35%" text="Alien name:"  />
                               <control valign = "center" width = "65%" id="loadTextField" name="textfield" />
                            </panel>
                           <panel id = "load_input_panel_info" height = "25%" childLayout = "horizontal" >
                               <control name="label" valign = "center" id = "load_info_label" width = "100%" text="Alphanumeric characters, dashes, spaces and underscores only."  />
                            </panel>
                            <panel id = "return_load_panel" childLayout = "vertical"  height = "40%" width = "100%">
                                <control name ="button" label="Load alien"  width = "*" id = "confirmLoad" visibleToMouse="true">
                                   <interact onClick="confirmLoad()"/>
                                </control>
                                <control name ="button" label="Cancel"  width = "*" id = "returnToEditor" visibleToMouse="true">
                                   <interact onClick="showEditor()"/>
                                </control>
                            </panel>    
                         </panel>
                        
                    </control>
                    
                </panel>
        </layer>
    </screen>    
            
    
    <screen id="start" controller="julietgroupproject.GUI.MainMenuController">
        <layer id="foreground" childLayout="center">
            
            <panel id="panel_background" width = "100%" height="100%" childLayout="vertical">
                <effect >
                             <onActive name="fade" start ="#00" end = "ff" length = "1500" post = "true" />
