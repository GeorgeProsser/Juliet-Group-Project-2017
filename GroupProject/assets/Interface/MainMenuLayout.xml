<?xml version="1.0" encoding="UTF-8"?>

<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="start" controller="julietgroupproject.GUI.MainMenuController">
        <layer id="foreground" childLayout="center">
            <panel id="panel_background" width = "100%" height="100%" childLayout="vertical">
                <panel id="panel_top" backgroundColor="#ff0000ff" width="*" height="15%" childLayout="center">
                    <control name="label" text="Learn to be an Alien!!!!" align="center" valign="center"/>

                     

              
                </panel>
                <panel id="panel_middle" width="*" height="70%" childLayout="horizontal">
                    <panel id = "panel_middle_left" backgroundColor="#ff5500ff" width= "10%" height = "*" childLayout = "vertical">
                        <panel id = "panel_gravity_options" backgroundColor="#ff5533ff" width= "*" height = "25%" childLayout = "vertical" valign = "center">
                            <control name="label" text="Gravity options:" align = "center" />
                            <control name="button" label="GravityOff" id="GravButton" align="center" valign="center" 
                                visibleToMouse="true" > 
                                <interact onClick="toggleGravOff()"/>
                        </control>
                        <control name="button" label="GravityOn" id="GravButton" align="center" valign="center" 
                                visibleToMouse="true" > 
                                <interact onClick="toggleGravOn()"/>
                        </control>
                        <control name="button" label="smoothCamera?" id="smoothCamera" align="center" valign="center" 
                                visibleToMouse="true" > 
                                <interact onClick="toggleSmoothness()"/>
                        </control>
                        </panel>
                        
                        <panel id ="panel_new_limb_size_entry" backgroundColour="#bb345123" width = "*" height = "70%" childLayout = "vertical">
                            <control name="label"text="New Limb Generator" height = "10%" valign = "top"/>
                            
                            <panel id = "panel_new_limb_entry_fields" backgroundColour="#bb345123" width = "*" height = "40%" childLayout = "vertical" valign ="center">
                                <control name="label" text="Enter Height (Y-axis):" />
                                <control name="textfield" id="heightTextField" maxLength="20" />
                                <control name="label" text="Enter Width (X-axis):" />
                                <control name="textfield" id="widthTextField" maxLength="20"  />
                                <control name="label" text="Enter Length (Z-axis):" />
                                <control name="textfield" id="lengthTextField" maxLength="20" />
                            </panel>
                            <panel id = "panel_new_limb_entry_fields_second" backgroundColour="#bb345123" width = "*" height = "25%" childLayout = "vertical" valign ="center">
                                <control name = "button" label = "Set Focus to Simulator" align = "center" width = "*"/>
                                <control name="label" text="*** Right click on body to add ***" height = "10%"/>
                            </panel>
                            <panel id = "panel_shape_selector" backgroundColour="#bb345123" width = "*" height = "25%" childLayout = "vertical" valign ="center">
                               <control name="label" text="Shape Selector" />
                                <control name ="button" label="Set shape to cuboid" width = "*" id = "cuboidButton" visibleToMouse="true">
                                    <interact onClick="setToCuboid()"/>
                                </control>
                                <control name ="button" label="Set shape to sphere" width = "*" id = "sphereButton" visibleToMouse="true">
                                    <interact onClick="setToSphere()"/>
                                </control>
                                <control name="label" text="Currently Selected:" />
                                <control name="label" width = "*" id = "currentShape" text="Cuboid" />
                            </panel>
                            
                        </panel>
                        
                    </panel>
                    <panel id = "panel_middle_center" width= "80%" height = "*" childLayout = "vertical">
                    </panel>
                    <panel id = "panel_middle_right" backgroundColor="#ff5500ff"  width= "10%" height = "*" childLayout = "vertical">
                        <panel id ="panel_new_body_size_entry" backgroundColour="#bb345123" width = "*" height = "70%" childLayout = "vertical">
                            <control name="label"text="New Body Generator" height = "10%" valign = "top"/>
                            
                            <panel id = "panel_new_body_entry_fields" backgroundColour="#bb345123" width = "*" height = "35%" childLayout = "vertical" valign ="center">
                                <control name="label" text="Enter Height (Y-axis):" />
                                <control name="textfield" id="bodyHeightTextField" maxLength="20" />
                                <control name="label" text="Enter Width (X-axis):" />
                                <control name="textfield" id="bodyWidthTextField" maxLength="20"  />
                                <control name="label" text="Enter Length (Z-axis):" />
                                <control name="textfield" id="bodyLengthTextField" maxLength="20" />
                            </panel>
                            
                            <control name = "button" label = "Build new body" align = "center" width = "*">
                            
                                <interact onClick="newBody()"/>
                            </control>
                            <control name="label" text="*** Any undefined values"/>
                            <control name="label" text="will be random ***" />
                        </panel>
                        <control name="label" text="Random Limb Generator" height = "10%"/>
                        <control name="button" label="Add Limb" id="add_limb_button"  width = "*" align="center" valign="bottom" 
                                visibleToMouse="true" > 
                                <interact onClick="addLimb()"/>
                        </control>
                    </panel>
                </panel>
                <panel id="panel_bottom" backgroundColor="#ffff00ff" width="*" height="15%" childLayout="vertical">
                    <control name="button" label="HideGUI" id="hideGUI" align="center" valign="center" 
                                visibleToMouse="true" > 
                                <interact onClick="hideGUI()"/>
                        </control>
                    <control name="button" label="Toggle Wire Mesh" width = "10%" id="wireMesh" align="center" valign="center" 
                                visibleToMouse="true" > 
                                <interact onClick="toggleWireMesh()"/>
                        </control>
                        <control name="button" label="Reset Alien" width = "10%" id="alienReset" align="center" valign="center" 
                                visibleToMouse="true" > 
                                <interact onClick="resetAlien()"/>
                        </control>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>